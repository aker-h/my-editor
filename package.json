{
  "name": "myeditor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "debug-win": "npm run build-win && npm run start-win",
    "build-win": "npm-run-all -s build-uni:* && npm run build-win--e-packager",
    "start-win": ".\\my-editor-win32-x64\\my-editor.exe",

    "debug-linux": "npm run build-linux && npm run start-linux",
    "build-linux": "npm-run-all -s build-uni:* && npm run build-linux--e-packager",
    "start-linux": ".\\my-editor-win32-x64\\my-editor.exe",
    
    "build-uni": "npm-run-all -s build-uni:*",
    "build-uni:node-sass": "node-sass src/renderer/lib/ --output src/renderer/ --output-style compressed",
    "build-uni:webpack": "webpack --mode development",

    "build-win--e-packager": "electron-packager src my-editor --platform=win32 --arch=x64 --overwrite",
    "build-linux--e-packager": "electron-packager src my-editor --platform=linux --arch=x64 --overwrite"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jquery": "^3.5.14",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "@types/use-double-click": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "electron": "^21.0.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-packager": "^15.4.0",
    "electron-store": "^8.1.0",
    "eslint": "^8.26.0",
    "eslint-plugin-react": "^7.31.10",
    "jquery": "^3.6.1",
    "node-sass": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "use-double-click": "^1.0.5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
