{
	"compilerOptions": {
	  "target": "es2021",
	  "module": "ES6",
	  "strict": true,
	  "noImplicitAny": true,
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "skipLibCheck": false,
	  "forceConsistentCasingInFileNames": true,
	  "declarationMap": false,
	  "baseUrl": "./",                   /* Base directory to resolve non-absolute module names. */
	  "paths": {
		  "SRC/*": ["./src/*"],
		  "APP/*": ["./src/application/*"],
		  "APP_LIB/*": ["./src/application/lib/*"],
		  "PRELOAD/*": ["./src/preload/*"],
		  "PRE_LIB/*": ["./src/preload/lib/*"],
		  "RENDERER/*": ["./src/renderer/*"],
		  "REN_LIB/*": ["./src/renderer/lib/*"],
		  "COMPONENTS/*": ["./src/renderer/lib/components/*"],
 		  "LIB/*": ["./src/lib/*"] 
	  },    
	  "moduleResolution": "Node",
	  "jsx": "react",
	  "lib": ["dom"],
	  "typeRoots": [
		"./src/@types",
		"./node_modules/@types"
	  ]
	},
	"include": [
	  "src/**/*",
	  "src/*"
	]
  }